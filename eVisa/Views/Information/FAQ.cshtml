@model IEnumerable<eVisa.ViewModel.FAQView>
@{
    ViewBag.Title = "FAQ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <br />
    <div class="container">
        <div class="col-md-12">
            <h1>Frequently Asked Questions</h1>

            <ul class="collapsible" data-collapsible="accordion">
                @foreach (var item in Model)
                {
                    <li>
                        <div class="collapsible-header" style="font-weight:600;">
                            <i class="accordion_icon fa fa-plus"></i>
                            @Html.Raw(item.question)
                        </div>
                        <div class="collapsible-body">
                            <p style="margin-left: 28px;">@Html.Raw(item.answer)</p>
                        </div>
                    </li>
                }
            </ul>
        </div>        
    </div>
</div>

@section scripts{

    <script type="text/javascript">
        jQuery('.collapsible li').click(function () {
            jQuery(this).toggleClass('active').find('i').toggleClass('fa-plus fa-minus')
                   .closest('li').siblings('li')
                   .removeClass('active').find('i').removeClass('fa-minus').addClass('fa-plus');
            jQuery(this).next('.collapsible-body').slideToggle().siblings('.collapsible-body').slideUp();

        });
    </script>

}
