@{
    ViewBag.Title = "Application Form";
}
<div class="content" data-ng-controller="application_ctrl">
    <div class="container">
        <div class="row bs-wizard" style="border-bottom:0;">
            <div class="col-xs-3 bs-wizard-step complete">
                <div class="text-center bs-wizard-stepnum">Contact Information</div>
                <div class="progress"><div class="progress-bar"></div></div>
                <a href="#" class="bs-wizard-dot"></a>
            </div>

            <div class="col-xs-3 bs-wizard-step complete">
                <!-- complete -->
                <div class="text-center bs-wizard-stepnum">Application</div>
                <div class="progress"><div class="progress-bar"></div></div>
                <a href="#" class="bs-wizard-dot"></a>
            </div>

            <div class="col-xs-3 bs-wizard-step">
                <!-- complete -->
                <div class="text-center bs-wizard-stepnum">Review</div>
                <div class="progress"><div class="progress-bar"></div></div>
                <a href="#" class="bs-wizard-dot"></a>
            </div>

            <div class="col-xs-3 bs-wizard-step">
                <!-- active -->
                <div class="text-center bs-wizard-stepnum">Payment</div>
                <div class="progress"><div class="progress-bar"></div></div>
                <a href="#" class="bs-wizard-dot"></a>
            </div>
        </div>
        <h1>Application Form</h1>
        <div class="appSubsTitle">You can apply up to 9 applicants. (All fields must fill up only English character is required.)</div>
        <br />

        <form name="appForm" data-ng-submit="save();">
            @Html.Partial("~/Views/Home/ApplicationFormPartial.cshtml")
            <br />
            <button class="btn btn-default" onclick="window.location.href='/Home/Apply'">
                <i class="fa fa-backward"></i>
                Back
            </button>
            <button type="submit" class="btn btn-default" data-ng-disabled="disabled">
                <i class="fa fa-save" data-ng-show="!disabled"></i>
                <i class="fa fa-circle-o-notch fa-spin fa-2x" data-ng-show="disabled"></i>
                Save & Continue
            </button>
            <br /><br />
        </form>
    </div>
</div>
@section scripts{

    <script type="text/javascript" src="/App/core/restful/restful.js"></script>
    <script type="text/javascript" src="/App/Application/application_ctrl.js"></script>

}
