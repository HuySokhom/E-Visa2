@model eVisa.ViewModel.HomeView
@{
    ViewBag.Title = "Kingdom Of Cambodia Ministry Of Foreign Affairs & International Cooperation";
    var i = 0;
    var j = 0;

    eVisa.Function.BaseFunction fun = new eVisa.Function.BaseFunction();
    Dictionary<int, string> Menus = (Dictionary<int, string>)ViewBag.MenuList;
    
    }

<div class="">
    <div id="bs-slide" class="carousel slide carousel-fade" style="height: auto;">
        <!-- Indicators -->
        <ol class="carousel-indicators  ">
            @foreach (var item in Model.ImageView)
            {
                <li data-target="#bs-slide" data-slide-to="@j" class=@(j == 0 ? "active" : "")></li>
                j = j + 1;
            }
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            @foreach (var item in Model.ImageView)
            {
                i = i + 1;
                if (i == 1)
                {
                    <div class="item active">
                        <img src="@item.Url" />
                        <div class="carousel-caption">
                        </div>
                    </div>
                }
                else
                {
                    <div class="item">
                        <img src="@item.Url" />
                        <div class="carousel-caption">
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
